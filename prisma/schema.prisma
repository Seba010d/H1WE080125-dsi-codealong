generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  organisationId Int 

  organisation Organisation @relation(fields: [organisationId], references: [id])

  @@map("users")
}

// Organisation Model (for companies)
model Organisation {
  id Int @id @default(autoincrement())
  name String
  address String
  zipcode Int
  city String 
  country String

  users User[]

  @@map("organisations")
}

// Car model
model Car {
  id Int @id @default(autoincrement())
  category String
  brand String
  model String
  year Int
  price Decimal @db.Decimal(10, 2)
  fueltype String

  @@map("cars")
}
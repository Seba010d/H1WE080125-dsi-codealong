generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int     @id @default(autoincrement())
  firstname String  
  lastname String  
  email String @unique
  password String
  role Role
  isActive Boolean

  @@map("users")
}

// Car model
model Car {
  id       Int     @id @default(autoincrement())
  category String
  brandId  Int
  model    String
  year     Int
  price    Decimal @db.Decimal(10, 2)
  fueltype String

  brand Brand @relation(fields: [brandId], references: [id])

  @@map("cars")
}

// Brand model
model Brand {
  id      Int    @id @default(autoincrement())
  name    String
  logoUrl String

  cars Car[]

  @@map("brands")

}
